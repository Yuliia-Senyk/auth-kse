doctype html
html
    head
        title Users
        style.
            table {
                width: 100%;
                border-collapse: collapse;
                margin-top: 20px;
            }

            th, td {
                border: 1px solid #dddddd;
                text-align: left;
                padding: 8px;
            }

            th {
                background-color: #f2f2f2;
            }

    body
        h2 current user: #{currentUser}

        hr
        hr
        hr

        if users.length > 0
            ul(style="list-style-type: none;")
                table
                    tr
                        th ID
                        th Username
                        th Password
                    each u in users
                        tr(style="margin-bottom: 10px;")
                            td #{u.id}
                            td #{u.username}
                            td #{u.password}s
        else
            p No users

        hr
        hr
        hr

        p
            a(href='/users') List of users
        p
            a(href='/register') Register a new user
        p
            a(href='/login') Login
        p
            a(href='/protected') Protected page
        p
            a(href='/logout') Logout
